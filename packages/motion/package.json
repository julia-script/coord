{
  "name": "@coord/motion",
  "version": "0.3.0",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.js",
  "license": "MIT",
  "scripts": {
    "lint": "tsc",
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf ./dist ./.turbo ./node_modules"
  },
  "tsup": {
    "dts": true,
    "format": [
      "cjs",
      "esm"
    ],
    "minify": false,
    "entryPoints": [
      "src/index.ts"
    ],
    "sourcemap": true
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@types/events": "^3.0.0",
    "@types/react": "^18.2.12",
    "tsconfig": "workspace:*",
    "tsup": "^6.7.0",
    "typescript": "^5.1.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@coord/core": "workspace:*",
    "events": "^3.3.0"
  }
}
